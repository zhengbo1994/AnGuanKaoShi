@{
    Layout = null;
}



<link href="~/Public/datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/Public/content/ExaminationRoomMaintenance/css/ExaminationRoomMaintenance.css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">查询区域</h4>

                <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up"></i>
                    </a>
                </div>
                <div class="widget-toolbar">
                    <a id="btnExaminationRoomMaintenance_Query" href="#">
                        <i class="ace-icon fa fa-search">查询</i>
                    </a>
                </div>
            </div>

            <div class="widget-body" style="display: block;">
                <div id="divExaminationRoomMaintenance_QueryArea" class="widget-main form-horizontal ">
                    <div class="row">
                        <div class="col-md-4 ">
                            <label class="control-label col-xs-4 ">考场名称</label>
                            <input class="col-xs-8" type="text" name="ExamRoomName">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--考场列表-->
<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">考场信息</h4>
                <div class="widget-toolbar">
                    <a href="#" id="btnExaminationRoomMaintenance_Insert">
                        <i class="ace-icon fa fa-plus">新增</i>
                    </a>
                </div>
            </div>
            <table id="gridExaminationRoomMaintenance_main"></table>
            <div id="pagerExaminationRoomMaintenance_main"></div>

        </div>
    </div>

</div>
<!--考场明细-->
<div class="modal fade" id="mdlExaminationRoomMaintenance_ExaminationRoomMaintenanceInfo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
                <h3 class="modal-title">考场明细</h3>
            </div>
            <div class="modal-body">
                <div id="divExaminationRoomMaintenance_ExaminationRoomMaintenanceInfo" class="form-horizontal">


                    <input type="hidden" name="Id" />
                    <table class="table table-bordered text-center table">
                        <tr>
                            <td colspan="1">考场名称<span class="text-danger"> ❉ </span></td>
                            <td colspan="1"><input type="text" name="ExamRoomName" data-verify="notempty" data-verify-errormessage="考场名称必填项，请检查" @*data-placement="right"*@ /></td>
                        </tr>
                        <tr>
                            <td colspan="1">核定人数<span class="text-danger"> ❉ </span></td>
                            <td colspan="1"><input type="text" name="PersonCount" data-verify="notempty" data-verify-errormessage="核定人数为必填项，请检查" /></td>
                        </tr>
                        <tr>
                            <td colspan="1">是否可用<span class="text-danger"> ❉ </span></td>
                            <td colspan="1"><label> <input name="Enabled" type="radio" value="true" checked />可用</label> <label><input name="Enabled" type="radio" value="false" /> 不可用</label></td>
                        </tr>
                        <tr>
                            <td colspan="1">备注</td>
                            <td colspan="1"><input type="text" name="Remark" /></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnExaminationRoomMaintenance_ExaminationRoomMaintenanceInfoConfirm" class="btn btn-info btn-sm">确定</button>
                <button class="btn btn-sm" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>

</div>

<script src="~/Public/datetimepicker/js/bootstrap-datetimepicker.js"></script>
<script src="~/Public/datetimepicker/js/bootstrap-datetimepicker.zh-CN.js"></script>
<script src="~/Public/content/ExaminationRoomMaintenance/js/ExaminationRoomMaintenance.js?v=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>