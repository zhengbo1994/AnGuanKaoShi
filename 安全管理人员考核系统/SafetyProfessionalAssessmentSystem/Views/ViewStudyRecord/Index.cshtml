@{
    Layout = null;
}
<link href="~/Public/datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
<!--查询区-->
<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">查询区域</h4>

                <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up"></i>
                    </a>
                </div>
                <div class="widget-toolbar">
                    <a id="btnViewStudyRecord_Query" href="#">
                        <i class="ace-icon fa fa-search">查询</i>
                    </a>
                </div>
            </div>

            <div class="widget-body" style="display: block;">
                <div id="divViewStudyRecord_QueryArea" class="widget-main form-horizontal ">
                    <div class="row">
                        <div class="col-xs-4 ">
                            <label class="control-label col-xs-4 ">姓名</label>
                            <input class="col-xs-8" type="text" name="EmployeeName">
                        </div>
                        <div class="col-xs-4 ">
                            <label class="control-label col-xs-4 ">报考科目</label>
                            <select class="col-xs-8" name="ExamType"></select>
                        </div>
                        <div class="col-xs-4 ">
                            <label class="control-label col-xs-4 ">报考行业</label>
                            <select class="col-xs-8" name="Industry"></select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-4 ">
                            <label class="control-label col-xs-4 ">企业名称</label>
                            <input class="col-xs-8" type="text" name="EnterpriseName">
                        </div>

                        <div class="col-xs-4 ">
                            <label class="control-label col-xs-4 ">城市</label>
                            <select class="col-xs-8" name="City"></select>
                        </div>
                        <div class="col-xs-4 ">
                            <label class="control-label col-xs-4 ">区域</label>
                            <select class="col-xs-8" name="Area"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<!--grid-->
<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">报名人员记录</h4>
            </div>
            <table id="gridViewStudyRecord_main"></table>
            <div id="pagerViewStudyRecord_main"></div>

        </div>
    </div>
</div>
<!--查看培训记录Modal--开始-->
<div class="modal fade" id="mdlViewStudyRecord_TrainingRecordInfo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
                <h4 class="modal-title">培训结果</h4>
            </div>
            <div class="modal-body">

                <div id="divViewStudyRecord_TrainingRecordInfo" class="form-horizontal">
                    <input type="hidden" name="Id" />
                    <input type="hidden" name="EmployeeId" />
                    <div class="form-group">
                        <label class="col-sm-4 control-label">累计学习时长</label>
                        <div class="col-sm-6">
                            <input type="text" name="StudyTime" class="width-100" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">累计练习时长</label>
                        <div class="col-sm-6">
                            <input type="text" name="PracticeTime" class="width-100" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">能力测试成绩</label>
                        <div class="col-sm-6">
                            <input type="text" name="AbilityTestResult" class="width-100" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">备注</label>
                        <div class="col-sm-6">
                            <textarea name="Remark" cols="3" rows="3"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>
<!--查看学习记录Modal--开始-->
<div class="modal fade" id="mdlViewStudyRecord_StudyRecordInfo">
    <div class="modal-dialog modal-lg ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
                <h4 class="modal-title">在线学习记录</h4>
            </div>
            <div class="modal-body">
                <div id="divViewStudyRecord_StudyRecordInfo" class="form-horizontal">
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>


<script src="~/Public/datetimepicker/js/bootstrap-datetimepicker.js"></script>
<script src="~/Public/datetimepicker/js/bootstrap-datetimepicker.zh-CN.js"></script>
<script src="~/Public/content/viewstudyrecord/js/viewstudyrecord.js?v=@DateTime.Now.ToString("ffff")"></script>
