@{
    Layout = null;
}
<link href="~/Public/datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/Public/content/delayrecord/css/delayReCord.css" rel="stylesheet" />

<div id="divDelayReCord_PageContainer">
    <div class="row">
        <div class="col-xs-12">
            <div class="widget-box">
                <div class="widget-header">
                    <h4 class="widget-title">查询区域</h4>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="ace-icon fa fa-chevron-up"></i>
                        </a>
                    </div>
                    <div class="widget-toolbar">
                        <a name="btnQuery" href="#">
                            <i class="ace-icon fa fa-search">查询</i>
                        </a>
                    </div>
                </div>

                <div class="widget-body" style="display: block;">
                    <div name="divQueryArea" class="widget-main form-horizontal ">
                        <div class="row">
                            <div class="col-xs-3 ">
                                <label class="control-label col-xs-4 ">姓名</label>
                                <input class="col-xs-8" type="text" name="employeeName">
                            </div>
                            <div class="col-xs-3 ">
                                <label class="control-label col-xs-4 ">身份证号</label>
                                <input class="col-xs-8" type="text" name="iDNumber">
                            </div>
                            <div class="col-xs-3 ">
                                <label class="control-label col-xs-4 ">证书证号</label>
                                <input class="col-xs-8" type="text" name="certificateNo">
                            </div>
                            <div class="col-xs-3 ">
                                <label class="control-label col-xs-4 ">企业名称</label>
                                <input class="col-xs-8" type="text" name="enterpriseName">
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-xs-12">
            <div class="widget-box">
                <div class="widget-header">
                    <h4 class="widget-title">延期记录查询</h4>
                    <div class="widget-toolbar">

                    </div>
                </div>
                <table id="gridDelayReCord_main"></table>
                <div id="pagerDelayReCord_main"></div>

            </div>
        </div>

    </div>



</div>
<script src="~/Public/datetimepicker/js/bootstrap-datetimepicker.js"></script>
<script src="~/Public/datetimepicker/js/bootstrap-datetimepicker.zh-CN.js"></script>
<script src="~/Public/imageUpload/js/imageUpload.js"></script>
<script src="~/Public/content/delayrecord/js/delayReCord.js?v=@DateTime.Now.ToString("ffff")"></script>